#landing-page{
  position: relative;

  p{
    font-family: $font-family-serif;
  }

  .sec{
    margin-bottom: 2.0em;
    padding-bottom: 2.0em;
  }


  .callout{
    background: #EEE9D9;
    padding: 3.0em 0;
  }

  #banner{
    background:url('<%= image_path 'hero-map.png' %>');
    height: 450px;

    color: white;
    text-shadow: 3px 3px #333;

    .title{
      margin-top: 1.0em;
      margin-bottom: 1.0em;
      font-size: 3.0em;
      .brand{
          color: #e44;
          font-size: 1.2em;
          font-weight: bold;
      }
    }

    .time, .place{
      h3{
        font-size: 1.2em;
      }
    }
  }

  @media (max-width: $screen-xs-max) {
    #banner{
      height: inherit;
      position:relative;
      .title{
        font-size: 2.0em;
        margin-bottom: 0.1em;
        margin-top: 0.1em;
      }
    }
  }


  #description{

  }

  #schedule{
    h4{
      margin-top: 1.5em;
    }
  }

  .person{
    height: 140px;
    margin-bottom: 0.5em;

    .title{
      font-weight: normal;
    }

    .name{
      font-weight: bold;
      color: $stanford-red;
    }

    .description{
      font-size: 0.9em;
    }
  }

}
